<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/swift_dark_bg">

    <!-- TOP: logo full width, edge to edge -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="32dp"
        android:src="@drawable/swift_mail_logo" />

    <!-- MIDDLE: title + status, med padding -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp">

        <!-- Door status -->
        <TextView
            android:id="@+id/tv_door_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/door_status_label"
            android:textColor="@color/text_secondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_door_status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/door_closed"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Mail status -->
        <TextView
            android:id="@+id/tv_mail_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_status_label"
            android:textColor="@color/text_secondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_mail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_none"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Last delivery -->
        <TextView
            android:id="@+id/tv_last_delivery_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_delivery_label"
            android:textColor="@color/text_secondary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_last_delivery_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- BOTTOM: buttons, med padding men alltid nere -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/btn_toggle_door"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/btn_toggle_door" />

        <Button
            android:id="@+id/btn_update_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/btn_update_mail" />

    </LinearLayout>

</LinearLayout>